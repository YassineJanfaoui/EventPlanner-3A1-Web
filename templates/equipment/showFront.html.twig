{% extends 'basePlanner.html.twig' %}

{% block title %}Equipment
{% endblock %}

{% block body %}
	<div class="card mb-4">
		<div class="card-header">Equipment</div>
		<div class="card-body">
			<table class="table">
				<tbody>
					<tr>
						<th>EquipmentId</th>
						<td>{{ equipment.EquipmentId }}</td>
					</tr>
					<tr>
						<th>Name</th>
						<td>{{ equipment.name }}</td>
					</tr>
					<tr>
						<th>State</th>
						<td>{{ equipment.state }}</td>
					</tr>
					<tr>
						<th>Category</th>
						<td>{{ equipment.category }}</td>
					</tr>
					<tr>
						<th>Quantity</th>
						<td>{{ equipment.quantity }}</td>
					</tr>
				</tbody>
			</table>
			<a href="{{ path('app_equipment_index') }}" class="btn btn-primary " style="width:25%; margin-left:37.5%; display:block;">
				Back to list
			</a>
		</div>
	</div>
{% endblock %}
