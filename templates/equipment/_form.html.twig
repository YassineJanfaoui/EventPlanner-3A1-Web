
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">Edit Equipment</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}

                    <div class="form-floating mb-3">
                        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Equipment name'}}) }}
                        <label for="{{ form.name.vars.id }}">Name</label>
                    </div>

                    <div class="form-floating mb-3">
                        {{ form_widget(form.state, {'attr': {'class': 'form-control', 'placeholder': 'State'}}) }}
                        <label for="{{ form.state.vars.id }}">State</label>
                    </div>

                    <div class="form-floating mb-3">
                        {{ form_widget(form.category, {'attr': {'class': 'form-control', 'placeholder': 'Category'}}) }}
                        <label for="{{ form.category.vars.id }}">Category</label>
                    </div>

                    <div class="form-floating mb-3">
                        {{ form_widget(form.quantity, {'attr': {'class': 'form-control', 'placeholder': 'Quantity'}}) }}
                        <label for="{{ form.quantity.vars.id }}">Quantity</label>
                    </div>

                    <div class="mt-4 mb-0">
                        <div class="d-grid">
                            <button class="btn btn-primary btn-block">{{ button_label|default('Save') }}</button>
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
