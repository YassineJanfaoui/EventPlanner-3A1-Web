{% extends 'base.html.twig' %}

{% block title %}Equipment index{% endblock %}

{% block body %}
    <h1>Equipment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>EquipmentId</th>
                <th>Name</th>
                <th>State</th>
                <th>Category</th>
                <th>Quantity</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for equipment in equipment %}
            <tr>
                <td>{{ equipment.EquipmentId }}</td>
                <td>{{ equipment.name }}</td>
                <td>{{ equipment.state }}</td>
                <td>{{ equipment.category }}</td>
                <td>{{ equipment.quantity }}</td>
                <td>
                    <a href="{{ path('app_equipment_show', {'EquipmentId': equipment.EquipmentId}) }}">show</a>
                    <a href="{{ path('app_equipment_edit', {'EquipmentId': equipment.EquipmentId}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_equipment_new') }}">Create new</a>
{% endblock %}
