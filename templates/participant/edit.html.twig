{% extends 'base.html.twig' %}

{% block title %}Edit Participant{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .participant-form-container {
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.1);
            padding: 30px;
            margin-top: 50px;
            margin-bottom: 50px;
        }
        
        .form-title {
            color: #2B2B2B;
            font-weight: 700;
            margin-bottom: 30px;
            position: relative;
            padding-bottom: 15px;
        }
        
        .form-title:after {
            content: '';
            position: absolute;
            left: 0;
            bottom: 0;
            width: 50px;
            height: 3px;
            background: #FF5F13;
        }
        
        .action-buttons {
            display: flex;
            justify-content: space-between;
            margin-top: 30px;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="participant-form-container">
                <h1 class="form-title">
                    <i class="fas fa-user-edit mr-2"></i>Edit Participant
                </h1>
                
                {{ form_start(form) }}

                <div class="mb-4">
                    {{ form_label(form.name, 'Full Name', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.name) }}
                </div>

                <div class="mb-4">
                    {{ form_label(form.age, 'Age', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                    {{ form_widget(form.age, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.age) }}
                </div>

                <div class="mb-4">
                    {{ form_label(form.affiliation, 'Affiliation', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                    {{ form_widget(form.affiliation, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.affiliation) }}
                </div>

                <div class="mb-4">
                    {{ form_label(form.team, 'Team', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                    {{ form_widget(form.team, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.team) }}
                </div>

                <div class="action-buttons">
                    <a href="{{ path('app_participant_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left mr-2"></i>Cancel
                    </a>
                    <button class="btn btn-warning" type="submit">
                        <i class="fas fa-save mr-2"></i>Update
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}