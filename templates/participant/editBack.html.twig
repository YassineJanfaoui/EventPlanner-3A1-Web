{% extends 'back.html.twig' %}

{% block title %}Edit Participant - Admin{% endblock %}

{% block body %}
<div id="layoutSidenav_content">
    <main class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-warning text-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fas fa-edit me-2"></i> Edit Participant</h5>
                        <a href="{{ path('app_participant_index_back') }}" class="btn btn-sm btn-light">
                            <i class="fas fa-arrow-left"></i> Back to list
                        </a>
                    </div>

                    <div class="card-body">
                        {{ form_start(form) }}

                        <div class="mb-3">
                            {{ form_label(form.name, 'Name', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.age, 'Age', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.age, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.age) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.affiliation, 'Affiliation', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.affiliation, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.affiliation) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.team, 'Team', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.team, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(form.team) }}
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <button class="btn btn-warning" type="submit">
                                <i class="fas fa-save me-1"></i> Update
                            </button>
                            <a href="{{ path('app_participant_index_back') }}" class="btn btn-outline-secondary">
                                Cancel
                            </a>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
{% endblock %}
