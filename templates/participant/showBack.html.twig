{% extends 'back.html.twig' %}

{% block title %}Participant Details - Admin{% endblock %}

{% block body %}
<div id="layoutSidenav_content">
    <main class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fas fa-user me-2"></i> Participant Details</h5>
                        <a href="{{ path('app_participant_index_back') }}" class="btn btn-sm btn-light">
                            <i class="fas fa-arrow-left"></i> Back to list
                        </a>
                    </div>

                    <div class="card-body">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th class="bg-light">ID</th>
                                    <td>{{ participant.participantId }}</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Name</th>
                                    <td>{{ participant.name }}</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Age</th>
                                    <td>{{ participant.age }}</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Affiliation</th>
                                    <td>{{ participant.affiliation ?? 'N/A' }}</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Team</th>
                                    <td>{{ participant.team ? participant.team.teamName : 'Unassigned' }}</td>
                                </tr>
                            </tbody>
                        </table>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_participant_edit_back', {'participantId': participant.participantId}) }}" class="btn btn-warning">
                                <i class="fas fa-edit me-1"></i> Edit
                            </a>

                            {{ include('participant/_delete_form.html.twig', {'participant': participant, 'back': true}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
{% endblock %}
