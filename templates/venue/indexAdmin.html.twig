{% extends 'back.html.twig' %}

{% block title %}Venue index{% endblock %}

{% block body %}
    <div class="card mb-4">
		<div class="card-header">Venue</div>
		<div class="card-body">
		<table id="datatablesSimple">
        <thead>
            <tr>
                <th>VenueId</th>
                <th>Location</th>
                <th>NbrPlaces</th>
                <th>VenueName</th>
                <th>Availability</th>
                <th>Cost</th>
                <th>Parking</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for venue in venues %}
            <tr>
                <td>{{ venue.VenueId }}</td>
                <td>{{ venue.Location }}</td>
                <td>{{ venue.NbrPlaces }}</td>
                <td>{{ venue.VenueName }}</td>
                <td>{{ venue.Availability }}</td>
                <td>{{ venue.Cost }}</td>
                <td>{{ venue.Parking }}</td>
                <td>
                    <a href="{{ path('app_admin_venue_show', {'VenueId': venue.VenueId}) }}" class="btn btn-outline-primary btn-sm">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
</table></div></div>
{% endblock %}
