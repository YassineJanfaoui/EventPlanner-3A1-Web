{% if pageCount > 1 %}
<nav>
    <ul class="pagination justify-content-center">
        {% if previous is defined %}
            <li class="page-item">
                <a class="page-link text-dark" href="{{ path(route, query|merge({(pageParameterName): previous})) }}" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        {% else %}
            <li class="page-item disabled">
                <span class="page-link text-secondary">&laquo;</span>
            </li>
        {% endif %}

        {% for page in pagesInRange %}
            {% if page != current %}
                <li class="page-item">
                    <a class="page-link text-dark" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                </li>
            {% else %}
                <li class="page-item active">
                    <a class="page-link bg-light text-dark border-primary">{{ page }}</a>
                </li>
            {% endif %}
        {% endfor %}

        {% if next is defined %}
            <li class="page-item">
                <a class="page-link text-dark" href="{{ path(route, query|merge({(pageParameterName): next})) }}" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        {% else %}
            <li class="page-item disabled">
                <span class="page-link text-secondary">&raquo;</span>
            </li>
        {% endif %}
    </ul>
</nav>
{% endif %}