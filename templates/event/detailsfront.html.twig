{% extends 'basePlanner.html.twig' %}

{% block title %}{{ event.name }} | Event Details{% endblock %}

{% block css %}
    {{ parent() }}
    <style>
        .event-details-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 2rem;
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 30px rgba(0,0,0,0.08);
        }

        .event-header {
            text-align: center;
            margin-bottom: 3rem;
            position: relative;
            padding-bottom: 2rem;
            border-bottom: 1px solid #f0f0f0;
        }

        .event-title {
            font-size: 2.8rem;
            color: #2c3e50;
            font-weight: 700;
            margin-bottom: 1rem;
            line-height: 1.2;
        }

        .event-meta {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .meta-badge {
            display: inline-flex;
            align-items: center;
            padding: 0.6rem 1.2rem;
            background-color: #f8f9fa;
            border-radius: 50px;
            font-weight: 600;
            color: #2c3e50;
        }

        .meta-badge i {
            margin-right: 0.5rem;
            color: #3498db;
        }

        .availability-badge {
            background-color: #2ecc71;
            color: white;
            padding: 0.5rem 1.5rem;
            border-radius: 50px;
            font-weight: 700;
            font-size: 1.1rem;
            display: inline-block;
            margin-top: 1rem;
        }

        .event-image-container {
            margin: 2rem 0;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            max-height: 500px;
        }

        .event-image {
            width: 100%;
            height: auto;
            object-fit: cover;
        }

        .detail-section {
            margin-bottom: 3rem;
        }

        .section-title {
            font-size: 1.5rem;
            color: #3498db;
            margin-bottom: 1.5rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid #f0f0f0;
            display: flex;
            align-items: center;
        }

        .section-title i {
            margin-right: 0.8rem;
        }

        .detail-content {
            font-size: 1.1rem;
            line-height: 1.8;
            color: #555;
        }

        .action-buttons {
            display: flex;
            justify-content: center;
            gap: 1.5rem;
            margin-top: 3rem;
            flex-wrap: wrap;
        }

        .btn-custom {
            padding: 1rem 2.5rem;
            border-radius: 50px;
            font-weight: 600;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
            display: inline-flex;
            align-items: center;
        }

        .btn-custom i {
            margin-right: 0.8rem;
        }

        .btn-primary-custom {
            background-color: #3498db;
            color: white;
        }

        .btn-primary-custom:hover {
            background-color: #2980b9;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(41, 128, 185, 0.4);
        }

        .btn-secondary-custom {
            background-color: #2ecc71;
            color: white;
        }

        .btn-secondary-custom:hover {
            background-color: #27ae60;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(46, 204, 113, 0.4);
        }

        .similar-events {
            margin-top: 4rem;
            padding-top: 3rem;
            border-top: 1px solid #f0f0f0;
        }

        .attendees-section {
            background-color: #f9f9f9;
            padding: 2rem;
            border-radius: 10px;
            margin-top: 2rem;
        }

        .attendee-list {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            margin-top: 1rem;
        }

        .attendee-badge {
            background-color: white;
            padding: 0.5rem 1rem;
            border-radius: 50px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
            display: flex;
            align-items: center;
        }

        .attendee-badge i {
            margin-right: 0.5rem;
            color: #7f8c8d;
        }

        @media (max-width: 768px) {
            .event-title {
                font-size: 2rem;
            }
            
            .action-buttons {
                flex-direction: column;
                gap: 1rem;
            }
            
            .btn-custom {
                width: 100%;
                justify-content: center;
            }
            
            .event-meta {
                flex-direction: column;
                align-items: center;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="event-details-container">
    <div class="event-header">
        <h1 class="event-title">{{ event.name }}</h1>
        
        <div class="event-meta">
            <span class="meta-badge">
                <i class="fas fa-calendar-day"></i> {{ event.startDate|date('M d, Y') }}
            </span>
            <span class="meta-badge">
                <i class="fas fa-tag"></i> {{ event.fee }} TND
            </span>
            <span class="meta-badge">
                <i class="fas fa-users"></i> {{ event.maxParticipants }} spots max
            </span>
        </div>
        
        {% if availableSpots > 0 %}
            <span class="availability-badge">
                {{ availableSpots }} spots available!
            </span>
        {% else %}
            <span class="availability-badge" style="background-color: #e74c3c;">
                Sold Out
            </span>
        {% endif %}
    </div>

    {% if event.image %}
    <div class="event-image-container">
        <img src="{{ asset(event.image) }}" alt="{{ event.name }}" class="event-image">
    </div>
    {% endif %}

    <div class="detail-section">
        <h3 class="section-title"><i class="fas fa-info-circle"></i> Event Description</h3>
        <div class="detail-content">
            {{ event.description }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="detail-section">
                <h3 class="section-title"><i class="fas fa-clock"></i> Event Schedule</h3>
                <div class="detail-content">
                    <p><strong>Start:</strong> {{ event.startDate|date('F j, Y g:i A') }}</p>
                    <p><strong>End:</strong> {{ event.endDate|date('F j, Y g:i A') }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
    <div class="detail-section">
        <h3 class="section-title"><i class="fas fa-info-circle"></i> Event Details</h3>
        <div class="detail-content">
            <p><strong>Event ID:</strong> {{ event.eventId }}</p>
            <p><strong>Name:</strong> {{ event.name }}</p>
            <p><strong>Start Date:</strong> {{ event.startDate }}</p>
            <p><strong>End Date:</strong> {{ event.endDate }}</p>
            <p><strong>Max Participants:</strong> {{ event.maxParticipants }}</p>
            <p><strong>Fee:</strong> {{ event.fee }} â‚¬</p>
        </div>
    </div>
</div>

<div class="col-md-6">
    <div class="detail-section">
        <h3 class="section-title"><i class="fas fa-align-left"></i> Description</h3>
        <div class="detail-content">
            <p class="event-description">{{ event.description }}</p>
        </div>
    </div>
</div>
    </div>

    {% if reservations|length > 0 %}
    <div class="attendees-section">
        <h3 class="section-title"><i class="fas fa-users"></i> Attendees ({{ reservations|length }})</h3>
        <div class="attendee-list">
            {% for reservation in reservations %}
                <span class="attendee-badge">
                    <i class="fas fa-user"></i> {{ reservation.user.name ?? 'Guest' }}
                </span>
            {% endfor %}
        </div>
    </div>
    {% endif %}

    <div class="action-buttons">
        {% if availableSpots > 0 %}
            <a href="{{ path('app_reservation_new_front', {'eventId': event.eventId}) }}" class="btn btn-primary-custom btn-custom">
                <i class="fas fa-ticket-alt"></i> Book Now
            </a>
        {% endif %}
        <a href="{{ path('app_event_indexx') }}" class="btn btn-secondary-custom btn-custom">
            <i class="fas fa-arrow-left"></i> Back to Events
        </a>
    </div>

    {% if similarEvents|length > 0 %}
    <div class="similar-events">
        <h3 class="section-title"><i class="fas fa-star"></i> You Might Also Like</h3>
        <div class="row">
            {% for similarEvent in similarEvents %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        {% if similarEvent.image %}
                            <img src="{{ asset(similarEvent.image) }}" class="card-img-top" alt="{{ similarEvent.name }}" style="height: 180px; object-fit: cover;">
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">{{ similarEvent.name }}</h5>
                            <p class="card-text text-muted">
                                <small>{{ similarEvent.startDate|date('M d, Y') }}</small>
                            </p>
                        </div>
                        <div class="card-footer bg-white">
                            <a href="{{ path('app_event_details_front', {'id': similarEvent.eventId}) }}" class="btn btn-sm btn-outline-primary">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}