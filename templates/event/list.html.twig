<!-- Script pour la fonctionnalit√© de recherche -->
<script>
document.getElementById('search-event').addEventListener('input', function () {
    let searchTerm = document.getElementById('search-event').value.trim();
    if (searchTerm.length > 2) { // V√©rification pour √©viter les requ√™tes inutiles (au moins 3 caract√®res)
        fetch("{{ path('evenement_search') }}?search=" + encodeURIComponent(searchTerm), {
            method: "GET",
            headers: {
                "X-Requested-With": "XMLHttpRequest"
            }
        })
        .then(response => response.json())
        .then(data => {
            let resultsDiv = document.getElementById('search-results');
            resultsDiv.innerHTML = ""; // Vider les r√©sultats pr√©c√©dents
            if (data.length > 0) {
                data.forEach(event => {
                    let eventCard = `
                        <div class="card mt-2">
                        <div class="col-md-3">
                                        <img src="${event.image}" alt="Image de l'√©v√©nement" class="img-fluid rounded">
                                    </div>
                            <div class="card-body">
                                <h6 class="card-title text-primary">${event.name}</h6>
                                <p><strong>Location:</strong> ${event.lieu}</p>
                                <p><strong>Description:</strong> ${event.description}</p>
                                <p><strong>Fee:</strong> ${event.fee}</p>
                            </div>
                        </div>
                    `;
                    resultsDiv.innerHTML += eventCard;
                });
            } else {
                resultsDiv.innerHTML = '<p class="text-muted">Aucun √©v√©nement trouv√©.</p>';
            }
        })
        .catch(error => {
            console.error("Erreur AJAX:", error);
            document.getElementById('search-results').innerHTML = '<p class="text-danger">Erreur lors de la recherche.</p>';
        });
    } else {
        document.getElementById('search-results').innerHTML = '<p class="text-muted">Veuillez entrer au moins 3 caract√®res pour rechercher un √©v√©nement.</p>';
    }
});
</script>
<!-- Dark Mode Toggle -->
<button id="darkModeToggle" class="btn btn-dark position-fixed bottom-0 end-0 m-3 rounded-circle" style="width: 50px; height: 50px;">
    <i id="darkModeIcon" class="fas fa-moon"></i>
</button>

<script>
    // Dark Mode Toggle
    document.getElementById('darkModeToggle').addEventListener('click', function() {
        document.body.classList.toggle('dark-mode');
        const icon = document.getElementById('darkModeIcon');
        icon.classList.toggle('fa-moon');
        icon.classList.toggle('fa-sun');
        localStorage.setItem('darkMode', document.body.classList.contains('dark-mode'));
    });

    // Check for saved preference
    if (localStorage.getItem('darkMode') === 'true') {
        document.body.classList.add('dark-mode');
        document.getElementById('darkModeIcon').classList.replace('fa-moon', 'fa-sun');
    }

    // Add these styles to your existing <style> section
    const darkModeStyles = `
        .dark-mode {
            background-color: #1a1a1a;
            color: #f0f0f0;
        }
        .dark-mode .card {
            background-color: #2d2d2d;
            color: #f0f0f0;
            border-color: #444;
        }
        .dark-mode .custom-card-header {
            background-color: #003f44;
        }
        .dark-mode .fancy-title {
            background: linear-gradient(135deg, #2d2d2d, #1a1a1a);
            color: #f0f0f0;
        }
    `;
    
    const styleElement = document.createElement('style');
    styleElement.innerHTML = darkModeStyles;
    document.head.appendChild(styleElement);
</script>