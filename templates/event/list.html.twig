        function loadActivities(eventId, button) {
            const container = button.nextElementSibling;
            if (container.style.display === "block") {
                container.style.display = "none";
                button.innerHTML = 'Voir les activit√©s <i class="fas fa-chevron-down"></i>';
            } else {
                fetch(`/event/${eventId}/activities`)
                    .then(response => response.json())
                    .then(data => {
                        container.innerHTML = data.length ? 
                            data.map(a => `
                                <div class="border rounded p-2 mb-2 bg-light">
                                    üïí <strong>Horaire:</strong> ${a.horaire}<br>
                                    üë• <strong>Participants:</strong> ${a.nbrparticipant}
                                </div>`
                            ).join('') : 
                            '<div class="alert alert-warning">Aucune activit√© trouv√©e.</div>';
                        container.style.display = "block";
                        button.innerHTML = 'Masquer les activit√©s <i class="fas fa-chevron-up"></i>';
                    })
                    .catch(() => {
                        container.innerHTML = '<div class="alert alert-danger">Erreur de chargement.</div>';
                        container.style.display = "block";
                    });
            }
        }
