{% if pagination.pageCount > 1 %}
    <nav aria-label="Page navigation">
        <ul class="pagination">
            {% if pagination.current == 1 %}
                <li class="page-item disabled">
                    <span class="page-link">&laquo;</span>
                </li>
            {% else %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, {'page': 1}) }}">&laquo;</a>
                </li>
            {% endif %}

            {% if pagination.current > 1 %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, {'page': pagination.current - 1}) }}">&lsaquo;</a>
                </li>
            {% endif %}

            {% for page in range(1, pagination.pageCount) %}
                {% if page == pagination.current %}
                    <li class="page-item active">
                        <span class="page-link">{{ page }}</span>
                    </li>
                {% else %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path(route, {'page': page}) }}">{{ page }}</a>
                    </li>
                {% endif %}
            {% endfor %}

            {% if pagination.current < pagination.pageCount %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, {'page': pagination.current + 1}) }}">&rsaquo;</a>
                </li>
            {% endif %}

            {% if pagination.current == pagination.pageCount %}
                <li class="page-item disabled">
                    <span class="page-link">&raquo;</span>
                </li>
            {% else %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, {'page': pagination.pageCount}) }}">&raquo;</a>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}