<form style="display: inline-block" method="post" action="{{ path('app_bill_delete', {'billid': bill.billid, 'redirect_route': redirect_route ?? 'app_bill_index'}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ bill.billid) }}">
	<button class="btn btn-primary" style="background-color:darkred">Delete</button>
</form>
