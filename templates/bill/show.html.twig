{% extends 'back.html.twig' %}

{% block title %}Bill{% endblock %}

{% block body %}
    <div class="card mb-4">
        <div class="card-header">Bill</div>
<div class="card-body">
    <table class="table">
        <tbody>
            <tr>
                <th>Billid</th>
                <td>{{ bill.billid }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ bill.Amount }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ bill.Description }}</td>
            </tr>
            <tr>
                <th>Archived</th>
                <td>{{ bill.Archived }}</td>
            </tr>
            <tr>
                <th>EventId</th>
                <td>{{ bill.EventId }}</td>
            </tr>
            <tr>
                <th>DueDate</th>
                <td>{{ bill.DueDate ? bill.DueDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>PaymentStatus</th>
                <td>{{ bill.PaymentStatus }}</td>
            </tr>
        </tbody>
    </table>

    <button class="btn btn-primary"  style="width:25%; margin-left:37.5%;">
    <a style="text-decoration:none; color:white;" href="{{ path('app_bill_index') }}">Back to list</a></button>
    </div></div>
{% endblock %}
