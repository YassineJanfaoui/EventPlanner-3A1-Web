{% extends 'base.html.twig' %}

{% block title %}Event Team Submissions{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <!-- Page title with breadcrumbs -->
                <nav aria-label="breadcrumb" class="mb-4">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item active">Submissions</li>
                    </ol>
                </nav>
                
                <div class="card shadow">
                    <div class="card-header  text-white d-flex justify-content-between align-items-center">
                        <h2 class="mb-0 fs-4">Event Team Submissions</h2>
                        
                    </div>
                    <div class="card-body p-4">
                        {% if event_teams|length > 0 %}
                            <div class="table-responsive">
                                {# Add search form at the top of the table #}
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <form method="get" class="row g-3">
                                            <div class="col-md-8">
                                                <div class="input-group">
                                                    <input type="text" name="search" class="form-control" placeholder="Search submissions..." value="{{ search }}">
                                                    <button class="btn btn-primary" type="submit">
                                                        <i class="fas fa-search"></i> Search
                                                    </button>
                                                </div>
                                                {% if search %}
                                                    <a href="{{ path('app_event_team_index') }}" class="btn btn-outline-secondary mt-2">
                                                        <i class="fas fa-times"></i> Clear
                                                    </a>
                                                {% endif %}
                                            </div>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <label class="input-group-text" for="sortSelect">
                                                        <i class="fas fa-sort"></i> Sort by
                                                    </label>
                                                    <select class="form-select" id="sortSelect" name="sort" onchange="this.form.submit()">
                                                        <option value="recent" {% if sort == 'recent' or sort == '' %}selected{% endif %}>Most recent</option>
                                                        <option value="oldest_first" {% if sort == 'oldest_first' %}selected{% endif %}>Oldest first</option>
                                                        <option value="title_az" {% if sort == 'title_az' %}selected{% endif %}>Title (A-Z)</option>
                                                        <option value="title_za" {% if sort == 'title_za' %}selected{% endif %}>Title (Z-A)</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                
                                <table class="table table-striped table-hover align-middle">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Title</th>
                                            <th>Event</th>
                                            <th>Team</th>
                                            <th>Submission Date</th>
                                             <th>Time Ago</th> 
                                            <th class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for event_team in event_teams %}
                                            <tr>
                                                <td class="fw-bold">{{ event_team.title }}</td>
                                                <td>
                                                    {% if event_team.event is not null and event_team.event.name is defined %}
                                                        {{ event_team.event.name }}
                                                    {% else %}
                                                        <span class="text-muted">N/A</span>
                                                    {% endif %}
                                                </td>
                                                <td>
                                                    {% if event_team.team is not null and event_team.team.TeamName is defined %}
                                                        {{ event_team.team.TeamName }}
                                                    {% else %}
                                                        <span class="text-muted">N/A</span>
                                                    {% endif %}
                                                </td>
                                                <td>
                                                    {% if event_team.submissionDate %}
                                                        <span class="badge bg-info text-white">
                                                            <i class="far fa-calendar-alt me-1"></i>
                                                            {{ event_team.submissionDate|date('Y-m-d') }}
                                                        </span>
                                                    {% else %}
                                                        <span class="text-muted">No date</span>
                                                    {% endif %}
                                                </td>
                                                <td>
                                            {% if event_team.submissionDate %}
                                                <span class="badge bg-primary ">
                                                             <i class="far fa-clock me-1"></i>
                                                            {{ event_team.submissionDate|ago }}  <!-- Uses KnpTimeBundle's filter -->
                                                        </span>
                                                    {% else %}
                                                        <span class="text-muted">No date</span>
                                                    {% endif %}
                                                </td>
                                                <td>
                                                    <div class="d-flex gap-2 justify-content-center">
                                                        {# Add this in your table actions column #}
                                                        <a href="{{ path('app_event_team_certificate', {'submission_id': event_team.submissionId}) }}" class="btn btn-success btn-sm" title="View Certificate">
                                                            <i class="fas fa-certificate"></i>
                                                        </a>
                                                        {% if event_team.submissionId is not null %} {# Added check #}
                                                            <a href="{{ path('app_event_team_show', {'submission_id': event_team.submissionId}) }}" class="btn btn-primary btn-sm" title="View">
                                                                <i class="fas fa-eye"></i>
                                                            </a>
                                                            <a href="{{ path('app_event_team_edit', {'submission_id': event_team.submissionId}) }}" class="btn btn-warning btn-sm" title="Edit">
                                                                <i class="fas fa-edit"></i>
                                                            </a>
                                                            <form method="post" action="{{ path('app_event_team_delete', {'submission_id': event_team.submissionId}) }}" onsubmit="return confirm('Are you sure you want to delete this event team?');" style="display: inline-block;">
                                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event_team.submissionId) }}">
                                                                <button class="btn btn-danger btn-sm" title="Delete">
                                                                    <i class="fas fa-trash-alt"></i>
                                                                </button>
                                                            </form>
                                                        {% else %}
                                                            <span class="text-danger">Invalid ID</span> {# Indicate problem #}
                                                        {% endif %} {# End check #}
                                                    </div>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                                <a href="{{ path('app_event_team_new') }}" class="btn btn-success btn-sm">
                            <i class="fas fa-plus me-1"></i> Create New
                        </a>
                            </div>
                            
                            <div class="navigation d-flex justify-content-center mt-4">
                                {{ knp_pagination_render(event_teams) }}
                            </div>
                        {% else %}
                            <div class="alert alert-info text-center p-5">
                                <i class="fas fa-info-circle fa-2x mb-3"></i>
                                <h4>No submissions found</h4>
                                <p class="mb-0">There are no event team submissions in the system yet.</p>
                                <div class="mt-4">
                                    <a href="{{ path('app_event_team_new') }}" class="btn btn-success">
                                        <i class="fas fa-plus me-1"></i> Create First Submission
                                    </a>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
