{% extends 'base.html.twig' %}

{% block title %}Edit Event Team Submission{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <!-- Page title with breadcrumbs -->
                <nav aria-label="breadcrumb" class="mb-4">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('app_event_team_index') }}">Submissions</a></li>
                        <li class="breadcrumb-item active">Edit Submission</li>
                    </ol>
                </nav>
                
                <div class="card shadow">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h2 class="mb-0 fs-4">Edit Submission</h2>
                        <span class="badge bg-light text-primary">ID: {{ event_team.submissionId }}</span>
                    </div>
                    <div class="card-body p-4">
                        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                            {{ form_errors(form) }}
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.event, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                    {{ form_widget(form.event) }}
                                    <div class="text-danger small">
                                        {{ form_errors(form.event) }}
                                    </div>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.team, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                    {{ form_widget(form.team) }}
                                    <div class="text-danger small">
                                        {{ form_errors(form.team) }}
                                    </div>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                {{ form_label(form.title, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                {{ form_widget(form.title) }}
                                <div class="text-danger small">
                                    {{ form_errors(form.title) }}
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                {{ form_label(form.fileLink, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                <div class="input-group">
                                    {{ form_widget(form.fileLink) }}
                                    
                                </div>
                                <div class="text-danger small">
                                    {{ form_errors(form.fileLink) }}
                                </div>
                                <div class="form-text">Enter a valid URL to your submission file</div>
                            </div>
                            
                            <div class="mb-4">
                                {{ form_label(form.submissionDate, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                {{ form_widget(form.submissionDate) }}
                                <div class="text-danger small">
                                    {{ form_errors(form.submissionDate) }}
                                </div>
                            </div>
                            
                            <hr class="my-4">
                            
                            <div class="d-flex justify-content-between align-items-center">
                                <a href="{{ path('app_event_team_index') }}" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-1"></i> Back to List
                                </a>
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-save me-1"></i> Save Changes
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
                
                <div class="card mt-4 border-danger">
                    <div class="card-header bg-danger text-white">
                        <h3 class="mb-0 fs-5">Danger Zone</h3>
                    </div>
                    <div class="card-body">
                        <p class="text-muted mb-3">Once you delete this submission, there is no going back. Please be certain.</p>
                        <div class="text-end">
                            <a href="{{ path('app_event_team_delete', {'id': event_team.submissionId}) }}" 
                               class="btn btn-danger"
                               onclick="return confirm('Are you sure you want to delete this submission? This action cannot be undone.');">
                                <i class="fas fa-trash-alt me-1"></i> Delete Submission
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
