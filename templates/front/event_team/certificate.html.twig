{% extends 'base.html.twig' %}

{% block title %}Certificate of Achievement{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .certificate-container {
            width: 100%;
            max-width: 800px;
            margin: 0 auto;
            padding: 40px;
            border: 20px solid #3a0ca3;
            position: relative;
            background-color: #fff;
            box-shadow: 0 0 25px rgba(0,0,0,0.1);
        }
        
        .certificate-header {
            text-align: center;
            margin-bottom: 50px;
        }
        
        .certificate-title {
            font-size: 42px;
            font-weight: bold;
            color: #3a0ca3;
            margin-bottom: 10px;
            text-transform: uppercase;
            font-family: 'Times New Roman', Times, serif;
            letter-spacing: 2px;
        }
        
        .certificate-content {
            text-align: center;
            font-size: 20px;
            line-height: 1.8;
            font-family: 'Georgia', serif;
            margin-bottom: 60px;
        }
        
        .team-name {
            font-size: 32px;
            font-weight: bold;
            color: #3a0ca3;
            margin: 25px 0;
            font-family: 'Times New Roman', Times, serif;
        }
        
        .event-name {
            font-size: 28px;
            font-weight: bold;
            color: #3a0ca3;
            margin: 20px 0;
            font-style: italic;
            font-family: 'Georgia', serif;
        }
        
        .project-title {
            font-size: 24px;
            font-weight: bold;
            font-style: italic;
            margin: 20px 0;
            color: #333;
            font-family: 'Georgia', serif;
        }
        
        .certificate-footer {
            display: flex;
            justify-content: space-between;
            margin-top: 80px;
            padding: 0 40px;
        }
        
        .signature-block {
            text-align: center;
            width: 45%;
        }
        
        .signature-line {
            border-top: 1px solid #000;
            margin-bottom: 10px;
            width: 100%;
        }
        
        .signature-title {
            font-family: 'Georgia', serif;
            font-size: 18px;
        }
        
        .issue-date {
            text-align: center;
            margin-top: 40px;
            font-style: italic;
            font-family: 'Georgia', serif;
        }
        
        .certificate-seal {
            position: absolute;
            bottom: 60px;
            right: 60px;
            width: 120px;
            height: 120px;
            border: 2px solid #3a0ca3;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Times New Roman', Times, serif;
            color: #3a0ca3;
            font-size: 14px;
            text-align: center;
            transform: rotate(-15deg);
            opacity: 0.8;
        }
        
        .certificate-seal-inner {
            border: 1px solid #3a0ca3;
            border-radius: 50%;
            width: 100px;
            height: 100px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        
        .certificate-actions {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-bottom: 30px;
        }
        
        @media print {
            .no-print {
                display: none;
            }
            
            body {
                margin: 0;
                padding: 0;
            }
            
            .container {
                width: 100%;
                max-width: 100%;
                padding: 0;
                margin: 0;
            }
            
            .certificate-container {
                max-width: 100%;
                border: 20px solid #3a0ca3 !important;
                -webkit-print-color-adjust: exact;
                print-color-adjust: exact;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb" class="mb-4 no-print">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('app_event_team_index') }}">Submissions</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('app_event_team_show', {'submission_id': event_team.submissionId}) }}">Submission Details</a></li>
                        <li class="breadcrumb-item active">Certificate</li>
                    </ol>
                </nav>
                
                <div class="certificate-actions no-print">
                    <button class="btn btn-primary" onclick="window.print()">
                        <i class="fas fa-print me-1"></i> Print Certificate
                    </button>
                    
                    <a href="{{ path('app_event_team_certificate_pdf', {'submission_id': event_team.submissionId}) }}" class="btn btn-success">
                        <i class="fas fa-file-pdf me-1"></i> Download as PDF
                    </a>
                </div>
                
                <div class="certificate-container">
                    <div class="certificate-header">
                        <div class="certificate-title">Certificate of Achievement</div>
                    </div>
                    
                    <div class="certificate-content">
                        <p>This certifies that</p>
                        <div class="team-name">{{ team.TeamName }}</div>
                        <p>has successfully participated in</p>
                        <div class="event-name">"{{ event.name }}"</div>
                        <p>with their project titled</p>
                        <div class="project-title">"{{ event_team.title }}"</div>
                        <p>We recognize their valuable contribution and commitment to excellence.</p>
                    </div>
                    
                    <div class="certificate-footer">
                        <div class="signature-block">
                            <div class="signature-line"></div>
                            <div class="signature-title">Event Organizer</div>
                        </div>
                        
                        <div class="signature-block">
                            <div class="signature-line"></div>
                            <div class="signature-title">Event Director</div>
                        </div>
                    </div>
                    
                    <div class="issue-date">
                        <p>Issued on: {{ date|date('F d, Y') }}</p>
                    </div>
                    
                    <div class="certificate-seal">
                        <div class="certificate-seal-inner">
                            <div>OFFICIAL</div>
                            <div>CERTIFICATE</div>
                            <div>OF</div>
                            <div>ACHIEVEMENT</div>
                        </div>
                    </div>
                </div>
                
                <div class="text-center mt-4 no-print">
                    <a href="{{ path('app_event_team_show', {'submission_id': event_team.submissionId}) }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back to Submission
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}