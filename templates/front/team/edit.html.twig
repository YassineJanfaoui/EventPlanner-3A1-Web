{% extends 'base.html.twig' %}

{% block title %}Edit Team{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <!-- Page title with breadcrumbs -->
                <nav aria-label="breadcrumb" class="mb-4">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('app_team_index') }}" class="text-primary">Teams</a></li>
                        <li class="breadcrumb-item active text-success">Edit</li>
                    </ol>
                </nav>
                
                <div class="card shadow">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h2 class="mb-0 fs-4">Edit Team</h2>
                        <span class="badge bg-light text-primary">ID: {{ team.id }}</span>
                    </div>
                    <div class="card-body p-4">
                        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                            {{ form_errors(form) }}
                            
                            <div class="mb-3">
                                {{ form_label(form.TeamName, 'Team Name', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                {{ form_widget(form.TeamName, {'attr': {'class': 'form-control'}}) }}
                                <div class="text-danger small">
                                    {{ form_errors(form.TeamName) }}
                                </div>
                            </div>
                            
                            <!-- Display-only fields for Score and Rank -->
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Score</label>
                                    <input type="text" class="form-control" value="{{ team.score }}" disabled readonly>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Rank</label>
                                    <input type="text" class="form-control" value="{{ team.rank }}" disabled readonly>
                                </div>
                            </div>
                            
                            <hr class="my-4">
                            
                            <div class="d-flex justify-content-between align-items-center">
                                <a href="{{ path('app_team_index') }}" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-1"></i> Back to List
                                </a>
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-save me-1"></i> Update
                                </button>
                            </div>
                        {{ form_end(form, {'render_rest': false}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
