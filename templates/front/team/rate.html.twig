{% extends 'base.html.twig' %}

{% block title %}Rate Team{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h2 class="mb-0">Rate Team: {{ team.TeamName }}</h2>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            {{ form_errors(form) }}
                            
                            <div class="mb-3">
                                {{ form_label(form.Score, 'Score') }}
                                {{ form_widget(form.Score, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.Score) }}
                            </div>
                            
                            <div class="mb-3">
                                {{ form_label(form.Rank, 'Rank') }}
                                {{ form_widget(form.Rank, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.Rank) }}
                            </div>
                            
                            <div class="d-flex justify-content-between mt-4">
                                <a href="{{ path('app_team_index') }}" class="btn btn-secondary">Back to List</a>
                                <button type="submit" class="btn btn-primary">Save Rating</button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}