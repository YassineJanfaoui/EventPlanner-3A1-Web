{% extends 'back.html.twig' %}

{% block title %}Create New User | Admin Panel{% endblock %}

{% block body %}
    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="mt-4"><i class="fas fa-user-plus me-2"></i>Create New User</h1>
                    <a href="{{ path('app_user_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back to List
                    </a>
                </div>

                <ol class="breadcrumb mb-4">
                    {#<li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}"><i class="fas fa-home"></i> Dashboard</a></li>#}
                    <li class="breadcrumb-item"><a href="{{ path('app_user_index') }}"><i class="fas fa-users"></i> Users</a></li>
                    <li class="breadcrumb-item active"><i class="fas fa-plus-circle"></i> New User</li>
                </ol>
                
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-user-edit me-2"></i>
                                <strong>User Information</strong>
                            </div>
                            <div class="badge bg-white text-primary p-2">
                                <i class="fas fa-id-card me-1"></i> New Registration
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-8 mx-auto">
                                {{ include('user/_form.html.twig') }}
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-light">
                        <div class="d-flex justify-content-between">
                            <div class="text-muted small">
                                <i class="fas fa-info-circle me-1"></i> All fields are required
                            </div>
                            <div>
                                <button type="reset" class="btn btn-outline-secondary me-2">
                                    <i class="fas fa-undo me-1"></i> Reset
                                </button>
                                <button type="submit" form="user_form" class="btn btn-success">
                                    <i class="fas fa-save me-1"></i> Create User
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        
        <footer class="py-4 bg-light mt-auto">
            <div class="container-fluid px-4">
                <div class="d-flex align-items-center justify-content-between small">
                    <div class="text-muted">
                        <i class="far fa-copyright"></i> {{ "now"|date("Y") }} Your Company. All rights reserved.
                    </div>
                    <div>
                        <a href="#"><i class="fas fa-shield-alt me-1"></i> Privacy Policy</a>
                        &middot;
                        <a href="#"><i class="fas fa-file-contract me-1"></i> Terms</a>
                    </div>
                </div>
            </div>
        </footer>
    </div>
{% endblock %}

{% block js %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize form validation
            const forms = document.querySelectorAll('.needs-validation');
            
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    
                    form.classList.add('was-validated');
                }, false);
            });

            // Password strength indicator
            const passwordInput = document.querySelector('#user_password');
            if (passwordInput) {
                passwordInput.addEventListener('input', function() {
                    const strengthBadge = document.getElementById('password-strength');
                    if (!strengthBadge) return;
                    
