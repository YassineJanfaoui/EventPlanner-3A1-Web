{% extends 'base.html.twig' %}

{% block title %}Face Login{% endblock %}

{% block body %}
<div class="login-container">
    <div class="logo">
        <img src="{{ asset('img/logo/logo.png') }}" alt="Event Planner">
    </div>
    
    <h1>Face Recognition Login</h1>
    
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="face_image">Upload your face image</label>
            <input type="file" id="face_image" name="face_image" accept="image/*" capture="user" required>
        </div>
        
        <button type="submit" class="btn btn-primary">Login with Face</button>
    </form>
    
    <div class="mt-3 text-center">
        <a href="{{ path('app_login') }}">Or login with username/password</a>
    </div>
</div>
{% endblock %}